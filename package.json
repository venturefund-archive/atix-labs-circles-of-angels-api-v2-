{
  "name": "circle-of-angels-backend",
  "version": "1.0.0",
  "description": "Api-rest for circle of angels",
  "main": "main.js",
  "dockerImage": "docker.atixlabs.com/coa/backend",
  "scripts": {
    "lint": "eslint src/**/*.js",
    "lint-fix": "eslint --fix src/**/*.js",
    "test": "export NODE_ENV=test && buidler clean && npx buidler compile && jest --silent --runInBand",
    "test:contracts": "export NODE_ENV=test && buidler test-contracts",
    "test:coverage": "npm test -- --coverage",
    "start": "export NODE_ENV=development && node index",
    "prod": "export NODE_ENV=production && node index",
    "staging": "export NODE_ENV=staging && node index",
    "testing": "npm run migrate && npm run prod",
    "get-flyway": "./get_flyway.sh",
    "migrate": "flyway -configFiles=flyway.conf -locations=filesystem:db/migrations migrate",
    "clean": "flyway -configFiles=flyway.conf -locations=filesystem:db/migrations clean",
    "contracts-coverage": "SOLIDITY_COVERAGE=true scripts/test.sh",
    "ganache": "ganache-cli -g 60000000",
    "node": "buidler node",
    "deploy": "buidler deploy",
    "build": "buidler compile",
    "index": "node index",
    "check-balances": "buidler check-balances",
    "run-dev-gsn": "buidler run-dev-gsn",
    "stop-dev-gsn": "buidler stop-dev-gsn",
    "docker:build": "docker build -t $npm_package_dockerImage:$npm_package_version-$CI_COMMIT_SHORT_SHA .",
    "docker:push": "docker push $npm_package_dockerImage:$npm_package_version-$CI_COMMIT_SHORT_SHA",
    "whitelist": "node scripts/whiteListMigration.js"
  },
  "author": "Atix Labs S.R.L",
  "license": "ISC",
  "//": {
    "1": "TODO: fix forked lib problems",
    "2": "Should add this dependency if you want to deploy contracts to RSK",
    "3": "\"@ethersproject/providers\": \"git+https://github.com/atixlabs/ethers-providers.git#v5.0.19\"",
    "4": "If you want to remove this dep, please run npx buidler clean and delete node_modules/ and package-lock.json"
  },
  "dependencies": {
    "@ethersproject/logger": "5.0.6",
    "@ethersproject/bignumber": "5.0.15",
    "@nomiclabs/buidler": "1.3.7",
    "@nomiclabs/buidler-truffle5": "1.1.2",
    "@nomiclabs/buidler-web3": "1.1.2",
    "@openzeppelin/contracts": "2.5.1",
    "@openzeppelin/contracts-ethereum-package": "2.5.0",
    "@openzeppelin/gsn-helpers": "0.2.4",
    "@openzeppelin/gsn-provider": "0.1.11",
    "@openzeppelin/network": "0.4.3",
    "@openzeppelin/upgrades": "2.8.0",
    "@rsksmart/rif-storage": "0.1.1",
    "@sendgrid/mail": "6.5.4",
    "@truffle/hdwallet-provider": "1.2.1",
    "axios": "0.21.1",
    "bcrypt": "5.0.0",
    "blueimp-md5": "2.12.0",
    "bunyan": "1.8.12",
    "bunyan-format": "0.2.1",
    "commitizen": "4.2.3",
    "config": "3.1.0",
    "cron": "1.8.2",
    "dotenv": "8.2.0",
    "elliptic": "6.5.3",
    "ethereumjs-tx": "2.1.2",
    "ethers": "5.0.19",
    "fast-water": "1.0.2",
    "fastify": "1.14.1",
    "fastify-cookie": "2.1.2",
    "fastify-cors": "1.0.1",
    "fastify-env": "0.6.2",
    "fastify-file-upload": "1.0.0",
    "fastify-jwt": "0.10.0",
    "fastify-static": "1.1.0",
    "fastify-swagger": "1.2.0",
    "jest-fetch-mock": "3.0.3",
    "lodash": "4.17.20",
    "md5-file": "4.0.0",
    "mkdirp-promise": "5.0.1",
    "moment": "2.24.0",
    "mustache": "4.0.0",
    "nodemailer": "6.1.1",
    "sails-postgresql": "1.0.2",
    "sha256": "0.2.0",
    "sharp": "0.27.0",
    "uuid": "8.3.2",
    "web3": "1.3.5",
    "websocket": "1.0.33",
    "xlsx": "0.14.1"
  },
  "devDependencies": {
    "@commitlint/cli": "12.0.0",
    "@commitlint/config-conventional": "12.0.0",
    "@nomiclabs/buidler-ethers": "2.0.2",
    "@openzeppelin/buidler-upgrades": "1.2.0",
    "@openzeppelin/truffle-upgrades": "1.2.0",
    "@openzeppelin/upgrades-core": "1.2.0",
    "babel-eslint": "10.0.1",
    "chai": "4.2.0",
    "commitlint": "11.0.0",
    "eslint": "5.14.1",
    "eslint-config-airbnb": "17.1.0",
    "eslint-config-airbnb-base": "13.2.0",
    "eslint-config-prettier": "4.0.0",
    "eslint-plugin-flowtype": "3.4.2",
    "eslint-plugin-import": "2.16.0",
    "eslint-plugin-jsx-a11y": "6.2.1",
    "eslint-plugin-prettier": "3.0.1",
    "eslint-plugin-promise": "4.0.1",
    "eslint-plugin-react": "7.12.4",
    "ethereum-waffle": "3.3.0",
    "ganache-cli": "6.8.2",
    "husky": "4.2.3",
    "jest": "24.1.0",
    "lint-staged": "10.0.8",
    "prettier": "1.16.4",
    "solidity-coverage": "git+https://github.com/sc-forks/solidity-coverage.git#buidler-plugin",
    "ws": "7.3.1"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.js": [
      "./node_modules/.bin/eslint --fix"
    ],
    "**/*.md{,x}": [
      "prettier --check"
    ]
  }
}
